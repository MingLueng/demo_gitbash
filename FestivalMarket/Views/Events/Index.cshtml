
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var proimages = ViewBag.lstNewEvents as FestivalMarket.Models.EF.Events;
}
<section class="content-page">
    <div class="container-fluid px-57 su-kien">
        <div class="row">
            @if (proimages != null)
            {
                <div class="col-6 items items-first h-100">

                    <div class="image">
                        <img src="@proimages.Image" class="w-100 " alt="item">
                    </div>
                    <div style="font-size: 22px; color: #899a29;"><a style="text-decoration:none" href="/chi-tiet-events/@proimages.Slug-@proimages.Id">@proimages.Title</a></div>
                    <div style="font-size: 18px; color: #ff6a00;"> @Html.Raw(FestivalMarket.Common.Utils.cutStringDescription(proimages.Description))</div>
                </div>
            }
       
            <div class="col-6">
                @Html.Action("Partial_NewEvents", "Events")

            </div>

        </div>

    </div>
</section>
<section class="su-kien-list py-3 my-3">
    <div class="container-fluid px-57 su-kien">
        <div class="row my-3">
            <div class="col-md-8">
             @Html.Action("Partial_ShowEvents", "Events")
            </div>
            <div class="col-md-4">
                <div class="item mg-2">
                    <img src="images/su-kien/dang-ky-sk.png" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

